@model Laboratorium5.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

@if (Model != null)
{
    <div>
        <h4>Album</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nazwa
            </dt>
            <dd class="col-sm-10">
                @Model.Nazwa
            </dd>
            <dt class="col-sm-2">
                Zespół
            </dt>
            <dd class="col-sm-10">
                @Model.Zespol
            </dd>
            <dt class="col-sm-2">
                Notowanie
            </dt>
            <dd class="col-sm-10">
                @Model.Notowanie
            </dd>
            <dt class="col-sm-2">
                Data wydania
            </dt>
            <dd class="col-sm-10">
                @Model.Data_wydania.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Spis Piosenek
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @if (Model.Piosenki != null && Model.Piosenki.Any())
                    {
                        foreach (var piosenka in Model.Piosenki)
                        {
                            <li>@piosenka.Tytul - @piosenka.Czas_trwania.ToString(@"hh\h\ mm\m\ ss\s")</li>
                        }
                    }
                    else
                    {
                        <li>Brak piosenek</li>
                    }
                </ul>
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <p>Brak danych do wyświetlenia.</p>
}
