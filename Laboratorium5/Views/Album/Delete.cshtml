@using Laboratorium5.Models
@model Laboratorium5.Models.Album

@{
    ViewData["Title"] = "Delete";
}

<h1>Skasuj Album</h1>
<form asp-controller="Album" asp-action="ConfirmDelete" method="post">

    <input type="hidden" asp-for="Id" />

    <div>
        <h4>Album</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nazwa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nazwa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zespol)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zespol)
            </dd>
            <dt class="col-sm-2">
                Spis Piosenek
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var piosenka in Model.Piosenki)
                    {
                            <li>
                                <span>@piosenka.Tytul - @piosenka.Czas_trwania.ToString(@"mm\:ss")</span>
                            </li>
                    }
                </ul>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notowanie)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notowanie)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data_wydania)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data_wydania)
            </dd>
        </dl>
    </div>

    <button type="submit">Usuń</button>
    <a asp-controller="Album" asp-action="Index">
        <button type="button">Powrót</button>
    </a>
</form>
